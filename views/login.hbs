  <!--================Login Box Area =================-->
	<section class="login_box_area section-margin">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<div class="hover">
							<h4>New to our website?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
							<a class="button button-account" href="/user/register">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Log in to enter</h3>
						{{#if message}}
							<div class="alert alert-{{type}} mx-5" role="alert">{{message}}</div>	
						{{/if}}
						<form class="row login_form" action="/user/login" method="post" id="login-form" >
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" id="username" name="username" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'" value="{{user.username}}">
							</div>
							<div class="col-md-12 form-group">
								<input type="Password" class="form-control" id="Password" name="password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" value="{{user.password}}">
							</div>
							<div class="col-md-12 form-group">
								<div class="creat_account">
									<input type="checkbox" id="keepLoggedIn" name="keepLoggedIn" {{#if user.keepLoggedIn}}checked{{/if}}>
									<label for="keepLoggedIn">Keep me logged in</label>
								</div>
							</div>
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="button button-login w-100">Log In</button>
								<a href="/user/forgot-password">Forgot Password?</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	{{{captcha}}}
	<script>
      function cb(token) {
        var input = document.createElement("input");
        input.setAttribute("hidden", true);
		input.setAttribute("type", "text");
        input.setAttribute("name", "g-recaptcha-response");
        input.setAttribute("value", token);
		document.getElementById("login-form").appendChild(input);
      }
    </script>
	<!--================End Login Box Area =================-->
