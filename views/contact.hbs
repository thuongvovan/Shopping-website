<!-- ================ contact section start ================= -->
<link
    rel='stylesheet'
    href='https://unpkg.com/leaflet@1.9.3/dist/leaflet.css'
    integrity='sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI='
    crossorigin=''
/>
<script
    src='https://unpkg.com/leaflet@1.9.3/dist/leaflet.js'
    integrity='sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM='
    crossorigin=''
></script>

<section class='section-margin--small'>
    <div class='container'>
        <div class='d-none d-sm-block mb-5 pb-4'>
            <div id='map' style='height: 420px;'></div>
            <script>
                // Khởi tạo bản đồ leaflet var 
                map = L.map('map').setView([10.7385, 106.6634], 13); 
                // Thêm lớp bản đồ từ Mapbox API
                L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=pk.eyJ1IjoidGh1b25ndnYiLCJhIjoiY2xldHBobGx0MWNpMTN6cTZwNzlrYWIxaSJ9.VRXM-Ei5hICeLVrm9MGPgw',
                  { 
                    attribution: 'Võ Văn Thương', 
                    maxZoom: 18, 
                    id: 'mapbox/streets-v11', 
                    tileSize: 512, 
                    zoomOffset: -1, 
                  }).addTo(map); 
                var marker = L.marker([10.7385, 106.6634]).addTo(map); marker.bindPopup('Địa chỉ: <b>Võ Văn Thương</b><br>Phường 5 - Quận 8 - TP. Hồ Chí Minh.').openPopup();
            </script>

        </div>

        <div class='row'>
            <div class='col-md-4 col-lg-3 mb-4 mb-md-0'>
                <div class='media contact-info'>
                    <span class='contact-info__icon'><i class='ti-home'></i></span>
                    <div class='media-body'>
                        <h3>TP. Hồ Chí Minh</h3>
                        <p>Phường 5 - Quận 8</p>
                    </div>
                </div>
                <div class='media contact-info'>
                    <span class='contact-info__icon'><i class='ti-headphone'></i></span>
                    <div class='media-body'>
                        <h3><a href='tel:+84982566040'>+84 982 566 040</a></h3>
                        <p>Mon to Fri 8am to 10pm</p>
                    </div>
                </div>
                <div class='media contact-info'>
                    <span class='contact-info__icon'><i class='ti-email'></i></span>
                    <div class='media-body'>
                        <h3><a href='mailto:vovanthuong@outlook.com.vn'>vovanthuong@outlook.com.vn</a></h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
            <div class='col-md-8 col-lg-9'>
                {{#if message}}
                        <div class='alert alert-{{type}} mx-5' role='alert'>{{message}}</div>
                {{/if}}
                <form
                    class='form-contact contact_form'
                    method='post'
                    id='contact-form'
                    novalidate='novalidate'
                >
                    <div class='row'>
                        <div class='col-lg-5'>
                            <div class='form-group'>
                                <input
                                    class='form-control'
                                    name='name'
                                    id='name'
                                    type='text'
                                    placeholder='Enter your name'
                                    value="{{user.fullname}}"
                                />
                            </div>
                            <div class='form-group'>
                                <input
                                    class='form-control'
                                    name='email'
                                    id='email'
                                    type='email'
                                    placeholder='Enter email address'
                                    value="{{user.username}}"
                                />
                            </div>
                            <div class='form-group'>
                                <input
                                    class='form-control'
                                    name='subject'
                                    id='subject'
                                    type='text'
                                    placeholder='Enter Subject'
                                />
                            </div>
                        </div>
                        <div class='col-lg-7'>
                            <div class='form-group'>
                                <textarea
                                    class='form-control different-control w-100'
                                    name='message'
                                    id='message'
                                    cols='30'
                                    rows='5'
                                    placeholder='Enter Message'
                                ></textarea>
                            </div>
                        </div>
                    </div>
                    <div class='form-group text-center text-md-right mt-3'>
                        <button type='submit' class='button button--active button-contactForm'>Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{{{captcha}}}
<script>
  function cb(token) {
    var input = document.createElement("input");
    input.setAttribute("hidden", true);
    input.setAttribute("type", "text");
    input.setAttribute("name", "g-recaptcha-response");
    input.setAttribute("value", token);
    document.getElementById("contact-form").appendChild(input);
  }
</script>
<!-- ================ contact section end ================= -->
<script>
  setChoose('Contact');
</script>